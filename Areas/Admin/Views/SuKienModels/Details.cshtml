@model OnlineMovieTicket.Models.SuKienModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3>Chi tiết sự kiện</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TenSuKien)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenSuKien)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.AnhSuKien)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AnhSuKien)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NoiDungSuKien)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NoiDungSuKien)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NgayDangSuKien)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NgayDangSuKien)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Phim)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phim.TenPhim)
                    </dd>
                </dl>
                <a asp-action="Edit" asp-route-id="@Model?.MaSuKien" class="btn btn-primary">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách sự kiện</a>
            </div>
        </div>
    </div>
</div>

