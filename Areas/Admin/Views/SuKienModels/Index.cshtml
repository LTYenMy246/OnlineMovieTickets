@model IEnumerable<OnlineMovieTicket.Models.SuKienModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh sách sự kiện phim</h4>
            <div class="nav-item">                
                <form asp-action="Index" method="get">
                    <div class="input-group">                       
                    </div>                   
                </form>
                <hr />
                <p>
                    <a asp-action="Create" class="btn btn-primary btn-sm">Tạo mới</a>
                </p>
            </div>            
            <div class="table-responsive pt-3">
                <table class="table table-bordered" id="myTable">
                    <thead>
                        <tr>
                            <th>Tên sự kiện</th>
                            <th>Ảnh sự kiện</th>
                            <th>Nội dung sự kiện</th>
                            <th>Ngày đăng sự kiện</th>
                            <th>Phim</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/@item.AnhSuKien" alt="Ảnh phim" style="max-width: 260px; max-height: 220px;" />
                                </td>                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenSuKien)
                                </td>
                                <td>
                                    <textarea readonly class="form-control" style="width: 250px; height: 90px; resize: none; overflow-y: auto; text-align: justify; padding-top: 25px;">
                                        @item.NoiDungSuKien.Trim()
                                    </textarea>

                                </td>
                                <td>@item.NgayDangSuKien.ToString("dd/MM/yyyy")</td> <!-- Định dạng ngày -->
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phim.TenPhim)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaSuKien" class="btn btn-inverse-warning btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaSuKien" class="btn btn-inverse-success btn-sm" title="Chi Tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaSuKien" class="btn btn-inverse-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa sự kiện này không?');">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>          
        </div>
    </div>
</div>

