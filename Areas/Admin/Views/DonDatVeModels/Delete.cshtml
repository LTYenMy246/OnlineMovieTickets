@model OnlineMovieTicket.Models.DonDatVeModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4>Xóa đơn đặt vé</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MaDonDatVe)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MaDonDatVe)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NguoiDung)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NguoiDung.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NgayDat)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NgayDat)
                </dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="MaDonDatVe" />
            <input type="submit" value="Xóa" class="btn btn-primary" /> |
            <a asp-action="Index" class="btn btn-primary">Trở về danh sách đơn đặt vé</a>
        </form>
    </div>
</div>
