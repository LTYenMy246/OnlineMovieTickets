@model OnlineMovieTicket.Models.GheModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3>Chi tiết ghế</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Tên ghế:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenGhe)
                    </dd>
                    <dt class = "col-sm-2">
                        <label>Tên phòng:</label>
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Phong.TenPhong)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.MaGhe" class="btn btn-primary">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách phim</a>
            </div>
        </div>
    </div>
</div>
