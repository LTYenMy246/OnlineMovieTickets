
@{
    ViewData["Title"] = "ThongKeDoanhThuTheoPhim";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thống kê Doanh thu theo phim</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 20px;
            color: #333;
        }

        h2 {
            text-align: center;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .chart-container {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        canvas {
            width: 100% !important; 
            height: 800px; 
        }

        table {
            width: 100%;
            max-width: 1000px;
            margin: 10px auto;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #ffcac7;
            color: black;
        }

        tbody tr:hover {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9em;
            color: #7f8c8d;
        }

        .custom-btn {
            padding: 5px 10px;
            font-size: 12px;
            border-radius: 4px;
            transition: background-color 0.3s;
            margin-right: 5px;
            background-color: cornflowerblue;
            color: white;
        }

            .custom-btn:hover {
                opacity: 0.8;
            }

        .button-container {
            text-align: left;
        }
        .table-responsive {
        max-height: 280px; 
        overflow-y: auto; 
        margin-top: 20px;
    }
    </style>
</head>
<body>
    <h2>Thống kê Doanh thu theo phim</h2>
    <div class="chart-container">
        <canvas id="doanhThuTheoPhimChart"></canvas>
    </div>
    <<div class="table-responsive">
    <table id="doanhThuTable">
        <thead>
            <tr>
                <th>Tên phim</th>
                <th>Doanh Thu (VND)</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    </div>
    <div class="container mt-5">
        <button id="exportExcelBtn" class="btn btn-success custom-btn">Xuất Excel</button>
    </div>
    <div class="footer">
        &copy; 2024 KNCinema
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        fetch('/Admin/Home/ThongKeDoanhThuTheoPhim?type=json')
            .then(response => response.json())
            .then(data => {
                console.log(data); 
                if (data.length === 0) {
                    alert('Không có dữ liệu cho thống kê doanh thu theo phim.');
                    return;
                }

                const labels = data.map(item => item.tenPhim);
                const doanhThu = data.map(item => item.doanhThu);

                const ctx = document.getElementById('doanhThuTheoPhimChart').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'bar', 
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Doanh thu',
                            data: doanhThu,
                            backgroundColor: 'rgba(255, 202, 199, 0.6)',
                            borderColor: 'rgba(79, 14, 11, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Tên phim'
                                        }
                                    },
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Doanh thu (VND)'
                                        }
                                    }
                                }
                            }
                        });

                const tbody = document.getElementById('doanhThuTable').getElementsByTagName('tbody')[0];
                data.forEach(item => {
                    const row = tbody.insertRow();
                    const cellTenPhim = row.insertCell(0);
                    const cellDoanhThu = row.insertCell(1);
                    cellTenPhim.textContent = item.tenPhim;
                    cellDoanhThu.textContent = item.doanhThu.toLocaleString('vi-VN'); 
                        });
                    })
            .catch(error => console.error('Error fetching data:', error));
    </script>
    <script>
    document.getElementById('exportExcelBtn').addEventListener('click', function () {
        const table = document.getElementById('doanhThuTable');
        const ws = XLSX.utils.table_to_sheet(table);
        const wb = XLSX.utils.book_new();

        const range = XLSX.utils.decode_range(ws['!ref']);
        for (let row = range.s.r; row <= range.e.r; row++) {
            for (let col = range.s.c; col <= range.e.c; col++) {
                const cell = ws[XLSX.utils.encode_cell({ r: row, c: col })];
                if (cell && cell.v && typeof cell.v === 'number') {
                    cell.z = '0.000';
                }
            }
        }
        XLSX.utils.book_append_sheet(wb, ws, 'DoanhThu');
        XLSX.writeFile(wb, 'ThongKeDoanhThuTheoPhim.xlsx');
    });
    </script>
</body>
</html>

