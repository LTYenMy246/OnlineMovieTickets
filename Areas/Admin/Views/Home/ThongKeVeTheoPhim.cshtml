
@{
    ViewData["Title"] = "ThongKeVeTheoPhim";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Thống kê Số lượng vé theo phim</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f9;
            margin: 20px;
            color: #333;
        }

        h2 {
            text-align: center;
            margin-bottom: 10px;
            color: #2c3e50;
        }

        .chart-container {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        canvas {
            width: 100% !important; 
            height: 800px; 
        }

        table {
            width: 100%;
            max-width: 1000px;
            margin: 10px auto;
            border-collapse: collapse;
            margin-top: 20px;
            background-color: #fff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border: border: 1px solid black;
            ;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd;
        }

        th {
            background-color: #c9fbff;
            color: black;
        }

        tbody tr:hover {
            background-color: #f2f2f2;
        }

        tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
            font-size: 0.9em;
            color: #7f8c8d;
        }

        .custom-btn {
            padding: 5px 10px;
            font-size: 12px;
            border-radius: 4px;
            transition: background-color 0.3s;
            margin-right: 5px;
            background-color: cornflowerblue;
            color: white;
        }

            .custom-btn:hover {
                opacity: 0.8;
            }

        .button-container {
            text-align: left;
        }

    .table-responsive {
        max-height: 280px; 
        overflow-y: auto; 
        margin-top: 20px;
    }
    </style>
</head>
<body>
    <h2>Thống kê Số lượng vé theo phim</h2>
    <div class="chart-container">
        <canvas id="veTheoPhimBarChart"></canvas>
    </div>

    <<div class="table-responsive">
    <table id="dataTable">
        <thead>
            <tr>
                <th>Tên phim</th>
                <th>Số lượng vé</th>
            </tr>
        </thead>
        <tbody>
            <!-- Dữ liệu sẽ được thêm vào đây qua JavaScript -->
        </tbody>
    </table>
    </div>
    <div class="container mt-5">
        <button id="exportExcelBtn" class="btn btn-success custom-btn">Xuất Excel</button>
    </div>
    <div class="footer">
        &copy; 2024 KNCinema
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        fetch('/Admin/Home/ThongKeVeTheoPhim?type=json')
            .then(response => response.json())
            .then(data => {
                console.log(data); 
                if (data.length === 0) {
                    alert('Không có dữ liệu cho thống kê vé theo phim.');
                    return;
                }

                const labels = data.map(item => item.tenPhim);
                const soLuong = data.map(item => item.soLuongVe);

                const ctx = document.getElementById('veTheoPhimBarChart').getContext('2d');
                const myChart = new Chart(ctx, {
                    type: 'bar', 
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Số lượng vé',
                            data: soLuong,
                            backgroundColor: 'rgba(201, 251, 255, 0.6)',
                            borderColor: 'rgba(30, 107, 112, 1)',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true, 
                        scales: {
                            x: {
                                title: {
                                    display: true,
                                    text: 'Tên phim'
                                }
                            },
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Số lượng vé'
                                }
                            }
                        }
                    }
                });

                const tbody = document.getElementById('dataTable').getElementsByTagName('tbody')[0];
                data.forEach(item => {
                    const row = tbody.insertRow();
                    const cell1 = row.insertCell(0);
                    const cell2 = row.insertCell(1);
                    cell1.textContent = item.tenPhim;
                    cell2.textContent = item.soLuongVe;
                });
            })
            .catch(error => console.error('Error fetching data:', error));

            document.getElementById('exportExcelBtn').addEventListener('click', () => {
                const data = [];
        
                // Lấy tiêu đề bảng
                const headers = ['Tên phim', 'Số lượng vé'];
                data.push(headers);
        
                // Lấy dữ liệu từ bảng
                const tbody = document.getElementById('dataTable').getElementsByTagName('tbody')[0];
                for (let row of tbody.rows) {
                    const rowData = [];
                    for (let cell of row.cells) {
                        rowData.push(cell.textContent);
                    }
                    data.push(rowData);
                }

                // Tạo workbook và worksheet
                const worksheet = XLSX.utils.aoa_to_sheet(data);
                const workbook = XLSX.utils.book_new();
                XLSX.utils.book_append_sheet(workbook, worksheet, 'Thống kê vé theo phim');

                // Xuất file Excel
                XLSX.writeFile(workbook, 'ThongKeVeTheoPhim.xlsx');
            });
    </script>   
</body>
</html>


