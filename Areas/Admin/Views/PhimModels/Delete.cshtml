@model OnlineMovieTicket.Models.PhimModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h2>Xóa phim </h2>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Ảnh phim:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.AnhPhim)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Trailer phim:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TrailerPhim)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Tên phim:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenPhim)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Tình trạng:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TinhTrang)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Nội dung:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @* @Html.DisplayFor(model => model.NoiDungPhim) *@
                        <textarea readonly class="form-control" style="width: 800px; height: 100px; resize: none;">
                            @Model.NoiDungPhim
                        </textarea>
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Thể loại:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TheLoai)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Quốc gia:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.QuocGia)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Đạo diễn:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DaoDien)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Diễn viên:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DienVien)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Thời lượng:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ThoiLuong)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Ngày khởi chiếu:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NgayKhoiChieu)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="MaPhim" />
                <input type="submit" value="Xóa" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách phim</a>
            </form>           
        </div>
    </div>
</div>
