@model OnlineMovieTicket.Models.PhimModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-8 grid-margin">
    <div class="card">
        <div class="card-body">
            <h2>Chi tiết phim</h2>
            <div class="d-flex">
                <!-- Thông tin phim -->
                <div class="flex-grow-1">
                    <dl class="row">

                        <dt class="col-sm-2">
                            <label>Trailer phim:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @if (!string.IsNullOrEmpty(Model.TrailerPhim))
                            {
                                <a href="@Model.TrailerPhim" target="_blank" class="btn btn-light btn-sm">Xem Trailer</a>
                            }
                            else
                            {
                                <p>Không có trailer.</p>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            <label>Tên phim:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TenPhim)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Tình trạng:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TinhTrang)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Nội dung:</label>
                        </dt>
                        <dd class="col-sm-10" style="text-align: justify; padding-right: 35px;">
                            @Html.DisplayFor(model => model.NoiDungPhim)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Thể loại:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TheLoai)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Quốc gia:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.QuocGia)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Đạo diễn:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DaoDien)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Diễn viên:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DienVien)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Thời lượng:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ThoiLuong)
                        </dd>
                        <dt class="col-sm-2">
                            <label>Ngày khởi chiếu:</label>
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.NgayKhoiChieu)
                        </dd>
                    </dl>
                </div>
                <!-- Ảnh phim -->
                <div class="d-flex justify-content-center">
                    <div class="ml-3">
                        @if (!string.IsNullOrEmpty(Model.AnhPhim))
                        {
                            <img src="~/@Model.AnhPhim" alt="Ảnh phim" style="max-width: 460px; max-height: 380px;"/>
                        }
                        else
                        {
                            <p>Không có ảnh phim.</p>
                        }
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.MaPhim" class="btn btn-primary">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn btn-secondary">Trở về danh sách phim</a>
            </div>
        </div>
    </div>
</div>