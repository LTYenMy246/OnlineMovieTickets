
@{
    ViewData["Title"] = "Index";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="col-6">
				<h4>Danh sách vai trò</h4>
			</div>
			<hr />
			<div class="col-6">
				<a asp-action="Create" class="btn btn-RedShop"><i class="fa-solid fa-plus"></i>&nbsp; Tạo mới</a>
				<a asp-action="Assign" class="btn btn-black"><i class="fa-regular fa-pen-to-square"></i>&nbsp; Phân công vai trò</a>
				<a asp-action="AssignUserRole" class="btn btn-gold"><i class="fa-solid fa-map-pin"></i>&nbsp; Bảng phân công</a>
			</div>
			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>Tên vai trò</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in ViewBag.Roles)
						{
							<tr class="bg-white text-black" style="opacity: 90%;">
								<td>@item.Name</td>
								<td style="width: 50px">
									<div class="btn-group">
										<a asp-action="Edit" class="btn btn-outline-primary btn-icon" asp-route-id="@item.Id">
											<i class="fa-solid fa-pen-to-square"></i>
										</a>
										<a asp-action="Delete" class="btn btn-outline-primary btn-icon" asp-route-id="@item.Id">
											<i class="fa-solid fa-trash-can"></i>
										</a>
									</div>
								</td>
							</tr>
						}						
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
