
@{
    ViewData["Title"] = "AssignUserRole";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<div class="col-6">
				<h4>Bản đồ vai trò được phân công</h4>
			</div>
			<hr />
			<div class="col-6">
				<a asp-action="Assign" class="btn btn-RedShop"><i class="fa-regular fa-pen-to-square"></i>&nbsp; Phân công vai trò</a>
				<a asp-action="Index" class="btn btn-gold"><i class="fa-solid fa-house"></i>&nbsp; Trở về danh sách vai trò</a>
			</div>
			<br />
			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<tr class="redShop">
						<th>Tên người dùng</th>
						<th>Tên vai trò</th>
					</tr>
					@foreach (var item in ViewBag.UserRoles)
					{
						<tr class="bg-white text-black" style="opacity: 80%;">
							<td>@item.UserName</td>
							<td>@item.RoleName</td>
						</tr>
					}
				</table>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<script src="//cdn.jsdelivr.net/npm/alertifyjs@1.13.1/build/alertify.min.js"></script>
	<script type="text/javascript">
		$(function () {
			var msgC = '@TempData["create"]'
			var msgA = '@TempData["assign"]'
			var msgD = '@TempData["delete"]'
			if (msgC) {
				alertify.success(msgC);
			}
			else if (msgA) {
				alertify.success(msgA);
			}
			else if (msgD) {
				alertify.error(msgD);
			}
		})
	</script>
}

