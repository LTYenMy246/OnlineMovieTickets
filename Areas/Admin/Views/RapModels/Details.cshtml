@model OnlineMovieTicket.Models.RapModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3>Chi tiết rạp</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Tên rạp:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenRap)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Địa chỉ:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DiaChiRap)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.MaRap" class="btn btn-primary">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách rạp</a>
            </div>
        </div>
    </div>
</div>

