@model OnlineMovieTicket.Models.RapModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h2>Xóa rạp</h2>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Tên rạp:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenRap)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Địa chỉ:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DiaChiRap)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="MaRap" />
                <input type="submit" value="Xóa" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách rạp</a>
            </form>
        </div>
    </div>
</div>
