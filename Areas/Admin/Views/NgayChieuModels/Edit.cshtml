@model OnlineMovieTicket.Models.NgayChieuModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chỉnh sửa ngày chiếu</h4>
            <form asp-action="Edit" method="post" class="form-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaNgayChieu" />
                <div class="row">
                    <div class="form-group">
                        <div class="col-md-3">
                            <label asp-for="NgayChieu" class="control-label"></label>
                            <input asp-for="NgayChieu" class="form-control" type="date" />
                            <span asp-validation-for="NgayChieu" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <input type="submit" value="Lưu" class="btn btn-primary" /> |
                        <a asp-action="Index" class="btn btn-primary">Trở về danh sách ngày chiếu</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
