@model OnlineMovieTicket.Models.NgayChieuModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h2>Xóa ngày chiếu</h2>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Ngày chiếu:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NgayChieu)
                    </dd>
                </dl>
            </div>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="MaNgayChieu" />
                <input type="submit" value="Xóa" class="btn btn-primary" /> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách ngày chiếu</a>
            </form>
        </div>
    </div>
</div>
