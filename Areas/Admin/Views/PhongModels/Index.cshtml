@model IEnumerable<OnlineMovieTicket.Models.PhongModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Danh sách phòng</h4>
            <div class="nav-item">
                <hr />
                <p>
                    <a asp-action="Create" class="btn btn-primary btn-sm">Tạo mới</a>
                </p>
            </div>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Tên phòng</th>
                            <th>Rạp</th>
                            <th>Số lượng ghế</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenPhong)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Rap.TenRap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoLuongGhe)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.MaPhong" class="btn btn-inverse-warning btn-sm" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.MaPhong" class="btn btn-inverse-success btn-sm" title="Chi Tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MaPhong" class="btn btn-inverse-danger btn-sm" title="Xóa" onclick="return confirm('Bạn có chắc chắn muốn xóa phim này không?');">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
