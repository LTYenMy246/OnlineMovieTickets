@model OnlineMovieTicket.Models.PhongModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3>Chi tiết phòng</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Tên phòng:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenPhong)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Rạp:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Rap.TenRap)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Số lượng ghế:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.SoLuongGhe)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.MaPhong" class="btn btn-primary">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách phòng</a>
            </div>
        </div>
    </div>
</div>