@model OnlineMovieTicket.Models.SuatChieuModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chỉnh sửa suất chiếu</h4>
            <form asp-action="Edit" method="post" class="form-sample">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="MaSuatChieu" />
                <div class="form-group">
                    <label asp-for="MaPhim" class="control-label"></label>
                    <select asp-for="MaPhim" class="form-control" asp-items="ViewBag.MaPhim"></select>
                    <span asp-validation-for="MaPhim" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaPhong" class="control-label"></label>
                    <select asp-for="MaPhong" class="form-control" asp-items="ViewBag.MaPhong"></select>
                    <span asp-validation-for="MaPhong" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaNgayChieu" class="control-label"></label>
                    <select asp-for="MaNgayChieu" class="form-control" asp-items="ViewBag.MaNgayChieu"></select>
                    <span asp-validation-for="MaNgayChieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MaThoiGianChieu" class="control-label"></label>
                    <select asp-for="MaThoiGianChieu" class="form-control" asp-items="ViewBag.MaThoiGianChieu"></select>
                    <span asp-validation-for="MaThoiGianChieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="GiaVeSuatChieu" class="control-label"></label>
                    <input asp-for="GiaVeSuatChieu" class="form-control" />
                    <span asp-validation-for="GiaVeSuatChieu" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Lưu" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

