@model OnlineMovieTicket.Models.SuatChieuModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h3>Chi tiết suất chiếu</h3>
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        <lable>Phim:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phim.TenPhim)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Phòng:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Phong.TenPhong)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Ngày chiếu:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NgayChieu.MaNgayChieu)
                    </dd>
                    <dt class="col-sm-2">
                        <lable>Thời gian chiếu:</lable>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ThoiGianChieu.MaThoiGianChieu)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.GiaVeSuatChieu)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GiaVeSuatChieu)
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model?.MaSuatChieu" class="btn btn-primary">Chỉnh sửa</a> |
                <a asp-action="Index" class="btn btn-primary">Trở về danh sách suất chiếu</a>
            </div>
        </div>
    </div>
</div>
