@page
@model RegisterModel
@{
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <div class="brand-logo">
                            <img src="~/images/KNCinema.png" alt="logo">
                        </div>
                        <h6>Xin chào!</h6>
                        <h3 class="fw-light">Đăng ký</h3>
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["SuccessMessage"]
                            </div>
                        }
                        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="pt-3">
                            <div class="form-group">
                                <input asp-for="Input.Ho" class="form-control form-control-lg" placeholder="Nhập Họ" />
                                <span asp-validation-for="Input.Ho" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.Ten" class="form-control form-control-lg" placeholder="Nhập Tên" />
                                <span asp-validation-for="Input.Ten" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.UserName" class="form-control form-control-lg" class="form-control form-control-lg" placeholder="Nhập Tên đăng nhập" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control form-control-lg" placeholder="Nhập Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="password" asp-for="Input.Password" class="form-control form-control-lg" placeholder="Nhập mật khẩu" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input id="password" asp-for="Input.ConfirmPassword" class="form-control form-control-lg" placeholder="Nhập lại mật khẩu" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>                                                                                
                            <div class="mt-3 d-grid gap-2">
                                <button type="submit" class="btn btn-block btn-primary btn-lg fw-medium auth-form-btn">Đăng ký</button>
                            </div>
                            <div class="text-center mt-4 fw-light">
                                Bạn đã có tải khoản? <a asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">Đăng nhập</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
