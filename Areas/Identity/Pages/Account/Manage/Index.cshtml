@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<h3>Thông tin cá nhân</h3>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập của bạn" disabled />
                <label class="form-label">Tên đăng nhập</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ho" class="form-control" placeholder="Cập nhật họ của bạn" />
                <label asp-for="Input.Ho" class="form-label"></label>
                <span asp-validation-for="Input.Ho" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Ten" class="form-control" placeholder="Cập nhật tên của bạn" />
                <label asp-for="Input.Ten" class="form-label"></label>
                <span asp-validation-for="Input.Ten" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Cập nhật số điện thoại của bạn" />
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-success">Lưu</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
