@using OnlineMovieTicket.Models
@inject SignInManager<AppNguoiDung> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<hr />
<ul class="nav nav-pills flex-column">
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Thông tin tài khoản</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Mật khẩu</a>
    </li>
    @if (hasExternalLogins)
    {
        <li class="nav-item">
            <a class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">Đăng nhập bên ngoài</a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Cài đặt dữ liệu cá nhân</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">Quay về trang chủ</a>
    </li>
</ul>
<style>

    .nav {
        margin: 20px 0; /* Thêm khoảng cách cho nav */
    }

    .nav-link {
        font-size: 16px; /* Tăng kích thước chữ */
        padding: 10px 15px; /* Thêm padding cho các liên kết */
        border-radius: 5px; /* Bo tròn góc */
        transition: background-color 0.3s, color 0.3s; /* Hiệu ứng chuyển màu */
    }

        .nav-link:hover {
            background-color: #7ab730;
            /* Màu nền khi hover */
            color: white; /* Màu chữ khi hover */
        }

    .nav-item {
        margin-bottom: 10px; /* Khoảng cách giữa các mục */
    }

    .btn-outline-primary {
        border: 1px solid black; /* Đường viền màu xanh dương */
    }

    .btn-fw {
        width: 100%; /* Đặt chiều rộng 100% cho nút */
    }

    .btn-success {
        background-color: #7ab730; /* Màu nền cho nút */
        color: white; /* Màu chữ cho nút */
    }

        .btn-success:hover {
            background-color: #218838; /* Màu nền cho nút khi hover */
        }
</style>