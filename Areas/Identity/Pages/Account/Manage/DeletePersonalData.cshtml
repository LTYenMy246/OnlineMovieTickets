@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>Xóa dữ liệu tài khoản</h3>
<hr />
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Việc xóa dữ liệu này sẽ xóa vĩnh viễn tài khoản của bạn và không thể khôi phục lại được.</strong>
    </p>
</div>

<div>
    <form id="delete-user" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        @if (Model.RequirePassword)
        {
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Vui lòng nhập mật khẩu của bạn." />
                <label>Nhập mật khẩu</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        }
        <button class="btn btn-danger" type="submit">Xóa dữ liệu và đóng tài khoản</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
