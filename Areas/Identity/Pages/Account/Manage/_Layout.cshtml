<div class="content-wrapper">
    <div class="row">
        <h2 class="text-center">Quản lý tài khoản</h2>
        <hr />
        <div class="col-md-4 grid-margin stretch-card">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center">Thay đổi dữ liệu tài khoản</h3>
                    <partial name="_ManageNav" />
                </div>
            </div>
        </div>
        <div class="col-md-8 grid-margin stretch-card">
            <div class="card shadow-sm">
                <div class="card-body">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @RenderSection("Scripts", required: false)
}
<style>
    .content-wrapper {
        padding: 20px;
        background-color: #f8f9fa; /* Màu nền nhẹ */
    }

    .text-center {
        text-align: center;
    }

    .card {
        border: none;
        border-radius: 10px; /* Bo tròn góc */
        transition: transform 0.2s; /* Hiệu ứng chuyển động */
    }


    .card-body {
        padding: 20px;
    }

    h2 {
        font-family: 'Arial', sans-serif;
        color: #343a40; /* Màu chữ tối */
    }

    h3 {
        font-family: 'Arial', sans-serif;
        color: #103d2c; /* Màu chữ xanh dương */
    }

    hr {
        border: 1px solid #103d2c; /* Đường kẻ màu xanh dương */
    }
</style>