@model OnlineMovieTicket.Models.AppNguoiDung
@{
    ViewData["Title"] = "Details";
	Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin">
	<div class="card">
		<div class="card-body">
			<h3>Chi tiết phòng</h3>
			<form asp-action="" method="post">
				<div class="p-4 rounded border text-black fw-bold">
					<div asp-validation-summary="ModelOnly" class="text-danger">
					</div>
					<input type="hidden" asp-for="Id" value="@Model.Id" />
					<div class="mb-3 row">
						<div class="col-2">
							<label asp-for="UserName"></label>
						</div>
						<div class="col-5">
							<input asp-for="UserName" readonly="readonly" class="form-control" readonly="readonly" />
						</div>
						<span asp-validation-for="UserName" class="text-danger"></span>
					</div>
					<div class="mb-3 row">
						<div class="col-2">
							<label asp-for="Email"></label>
						</div>
						<div class="col-5">
							<input asp-for="Email" readonly="readonly" class="form-control" readonly="readonly" />
						</div>
						<span asp-validation-for="Email" class="text-danger"></span>
					</div>
					<div class="mb-3 row">
						<div class="col-2">
							<label asp-for="Ho"></label>
						</div>
						<div class="col-5">
							<input asp-for="Ho" readonly="readonly" class="form-control" readonly="readonly" />
						</div>
						<span asp-validation-for="Ho" class="text-danger"></span>
					</div>
					<div class="mb-3 row">
						<div class="col-2">
							<label asp-for="Ten"></label>
						</div>
						<div class="col-5">
							<input asp-for="Ten" readonly="readonly" class="form-control" readonly="readonly" />
						</div>
						<span asp-validation-for="Ten" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<a asp-action="Index" class="btn btn-primary">Trở về danh sách người dùng</a>
					</div>
				</div>
			</form>			
		</div>
	</div>
</div>
